
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Authenticated users can query the list of users for discovery.
    // Individual users can only update their own profile.
    match /users/{userId} {
      allow read, list: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Users can create swipes. To keep it simple, we are not restricting reads/updates for now.
    match /swipes/{swipeId} {
      allow read, write: if isAuthenticated();
    }
    
    // Participants of a conversation can read/write to it.
    // Users can list conversations they are a part of.
    match /conversations/{conversationId} {
       // Allow reading/writing a single document if the user is a participant.
       allow get, write: if isAuthenticated() && request.auth.uid in resource.data.participants;
       // Allow querying the collection only if filtering for the user's own conversations.
       allow list: if isAuthenticated() && request.query.where.get('participants').get('array-contains') == request.auth.uid;
      
       // Messages can be read/written by participants of the parent conversation.
       match /messages/{messageId} {
         allow read, write: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
       }
    }
  }
}
