
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can be read by any authenticated user, but only written to by the owner.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read their own conversations subcollection.
    match /userConversations/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read and write to their own matches subcollection.
    match /userMatches/{userId}/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // A user can read their own feed document.
    match /userFeed/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Write access should be handled by Cloud Functions
      allow write: if false; 
    }

    // A user can only write to their own swipes path.
    match /swipes/{userId}/{document=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
        // Reading swipes should generally not be allowed on the client for privacy.
        allow read: if false;
    }
  }
}
