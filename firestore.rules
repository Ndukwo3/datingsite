rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection rules
    match /users/{userId} {
      // Allow any authenticated user to read a user's profile
      allow read: if request.auth != null;
      
      // Allow a user to write only to their own profile
      allow write: if request.auth.uid == userId;
    }

    // Conversations collection rules
    match /conversations/{conversationId} {
      // Allow list/read if user is authenticated and the conversation ID starts with their UID.
      allow list, read: if request.auth != null && 
                           conversationId.matches(request.auth.uid + '.*');
      
      // Allow write if user is authenticated and creating their own conversation
      allow create: if request.auth != null && 
                       conversationId.matches(request.auth.uid + '.*');
      
      // Allow update/delete if user owns the conversation
      allow update, delete: if request.auth != null && 
                               conversationId.matches(request.auth.uid + '.*');

      // Messages subcollection rules
      match /messages/{messageId} {
        // Allow read/write to messages if the user is a participant of the parent conversation
        allow read, write: if request.auth != null &&
                           get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
      }
    }
    
    // Swipes collection rules
    match /swipes/{swipeId} {
      // Allow read/write if the user is authenticated
      allow read, write: if request.auth != null;
    }
  }
}
