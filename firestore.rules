
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Conversations
    match /conversations/{conversationId} {

      // Only participants can read the conversation
      allow read: if isParticipant(conversationId);

      // Only participants can update conversation metadata
      allow update: if isParticipant(conversationId);

      // Messages subcollection
      match /messages/{messageId} {

        // Read messages only if user is a participant
        allow read: if isParticipant(conversationId);

        // Create message:
        // - user must be logged in
        // - senderId must match auth uid
        // - user must be a participant
        allow create: if request.auth != null
          && request.resource.data.senderId == request.auth.uid
          && isParticipant(conversationId);
      }
    }

    // Helper function
    function isParticipant(conversationId) {
      return request.auth != null &&
        request.auth.uid in
        get(/databases/$(database)/documents/conversations/$(conversationId))
          .data.participants;
    }
  }
}
