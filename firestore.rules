
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /conversations/{conversationId} {
      // Users can only read or update conversations they are a part of.
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participants;
      // Users can only create conversations they are a part of.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;

      match /messages/{messageId} {
        // Participants can read messages.
        allow read: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
        // Participants can create messages.
        allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
      }
    }

    match /swipes/{swipeId} {
      // A user can create a swipe if they are the one swiping.
      allow create: if request.auth != null && request.resource.data.swiperId == request.auth.uid;
      // A user can read a swipe if they were the one swiped on (to check for matches).
      allow read: if request.auth != null && resource.data.swipedId == request.auth.uid;
    }
    
    match /posts/{postId} {
      // Any authenticated user can read a post.
      allow read: if request.auth != null;
      // Only the author can create or update their own post.
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow update: if request.auth != null && resource.data.authorId == request.auth.uid;
      
      match /comments/{commentId} {
         // Any authenticated user can read comments.
         allow read: if request.auth != null;
         // Only the author can create their own comment.
         allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      }
    }
  }
}
