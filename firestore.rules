rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Conversations collection rules
    match /conversations/{conversationId} {
      // Allow read if user is authenticated and the conversation belongs to them
      // The conversationId appears to contain the userId prefix
      allow read: if request.auth != null && 
                     conversationId.matches(request.auth.uid + '.*');
      
      // Allow write if user is authenticated and creating their own conversation
      allow create: if request.auth != null && 
                       conversationId.matches(request.auth.uid + '.*');
      
      // Allow update/delete if user owns the conversation
      allow update, delete: if request.auth != null && 
                               conversationId.matches(request.auth.uid + '.*');
    }
    
  }
}
