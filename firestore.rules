
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Authenticated users can query the list of users for discovery.
    // Individual users can only update their own profile.
    match /users/{userId} {
      allow read, list: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Users can create swipes. To keep it simple, we are not restricting reads/updates for now.
    match /swipes/{swipeId} {
      allow read, write: if isAuthenticated();
    }
    
    // Rules for conversations
    match /conversations/{conversationId} {
       // Allow a user to check if a conversation document exists if their uid is in the conversationId.
       // This is safe because the IDs are sorted, and it only allows checking existence, not reading data.
       allow get: if isAuthenticated() && request.auth.uid in conversationId.split('_');
       
       // For listing, creating, or updating, the user must be a participant.
       allow list, write: if isAuthenticated() && request.auth.uid in resource.data.participants;
      
       // Messages can be read/written by participants of the parent conversation.
       match /messages/{messageId} {
         allow read, write: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
       }
    }
  }
}
